.prestations-div-home{
  padding: 0 !important;
}

.prestations{
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: 736px 200px;
  min-height: 200px;
  height: 200px;
  display: block;
}

  <% Category.order('name ASC').each_with_index do |c, i| %>
      #prestations_<%= c.id %> {
      background-image: url(<%= asset_path c.image1.url(:default) %>);
      }
  <% end %>

@media (min-width: 768px){
  .prestations{
    background-size: 640px 200px;
  }
  <% Category.order('name ASC').each_with_index do |c, i| %>
    <% if i+1 == Category.count && Category.count % 2 != 0 %>
      #prestations_<%= c.id %> {
      background-image: url(<%= asset_path c.image4.url(:default) %>);
      background-size: 992px 200px;
      }
    <% else %>
      #prestations_<%= c.id %> {
      background-image: url(<%= asset_path c.image2.url(:default) %>);
      }
    <% end %>
  <% end %>
}

@media (min-width: 992px){
  .prestations{
    background-size: 288px 200px;
  }
  <% Category.order('name ASC').each_with_index do |c, i| %>
    <% if i+1 == Category.count %>
      #prestations_<%= c.id %> {
      background-image: url(<%= asset_path c.image3.url(:default) %>);
      background-size: 288px 200px;
      }
    <% else %>
      #prestations_<%= c.id %> {
      background-image: url(<%= asset_path c.image3.url(:default) %>);
      }
    <% end %>
  <% end %>
}

@media (min-width: 1442px){
  .prestations{
    background-size: 640px 200px;
  }

  <% Category.order('name ASC').each_with_index do |c, i| %>
    <% if i+1 == Category.count %>
      #prestations_<%= c.id %> {
      background-image: url(<%= asset_path c.image2.url(:default) %>);
      background-size: 640px 200px;
      }
    <% else %>
      #prestations_<%= c.id %> {
      background-image: url(<%= asset_path c.image2.url(:default ) %>);
      }
    <% end %>
  <% end %>
}