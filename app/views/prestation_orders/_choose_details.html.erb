<h2> Détails de la prestation </h2>

<div class="row">
  <div class="col-xs-60 col-sm-60 col-md-29">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2> Généralités </h2>
      </div>
      <div class="panel-body">

        <div class="form-group">
          <%= f.label :name , "Nom *", :class => "control-label col-xs-20"%>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            <%= f.text_field :name, {:placeholder => "Nom", :class => "form-control"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :firstname, "Prénom *", :class => "control-label col-xs-20" %>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            <%= f.text_field :firstname, {:placeholder => "Prénom", :class => "form-control"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :entreprise, "Nom entreprise", :class => "control-label col-xs-20" %>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-briefcase"></span></span>
            <%= f.text_field :entreprise, {:placeholder => "Nom de l'entreprise", :class => "form-control"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, "E-mail *", :class => "control-label col-xs-20" %>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-send"></span></span>
            <%= f.email_field :email, { :placeholder => "email@example.com", :class => "form-control"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :tel, "N° de téléphone *", :class => "control-label col-xs-20" %>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-earphone"></span></span>
            <%= f.telephone_field :tel, {:placeholder => "0041...", :class => "form-control"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :place, "Lieu du déroulement du projet, type d'accès (voiture, bus), etc...  *", :class => "control-label col-xs-20" %>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></span>
            <%= f.text_area :place, {:rows => "5", :placeholder => "près du chêne au centre du village, en voiture se parker 50m en direction de ...", :class => "form-control"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :availabilities, "Disponibilités pour un éventuel rendez-vous *", :class => "control-label col-xs-20" %>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            <%= f.text_area :availabilities, {:rows => "5", :placeholder => "vendredi 6 décembre, dès 18h ou mercredi 11 décembre le matin ...", :class => "form-control"} %>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-xs-60 col-sm-60 col-md-29 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2> Projet </h2>
      </div>
      <div class="panel-body">

        <div class="form-group">
          <%= f.label :typeofproduct, "Type de produit *", :class => "control-label col-xs-20" %>
          <div class="input-group col-xs-40">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            <%= f.select :typeofproduct, @prestation_order.typesofproduct, {}, { :class => "form-control" } %>

          </div>
        </div>





      </div>
    </div>
  </div>
</div>



<div class="field">


</div>

<div class="field">
  <%= f.label :product %>
  <%= f.text_area :product %>
</div>

<div class="field">
  <%= f.label :length %>
  <%= f.time_select :length, {:include_seconds => true, :default => {:hour => '10', :minute => '30'}}  %>
</div>

<div class="field">
  <%= f.label :interview %>
  <%= f.text_field :interview %>
</div>

<div class="field">
  <%= f.label :month %>
  <%= f.month_field :month %>
</div>

<div class="field">
  <%= f.label :day %>
  <%= f.number_field :day, {:in => 1..31} %>
</div>

<div class="field">
  <%= f.label :other %>
  <%= f.text_area :other %>
</div>
