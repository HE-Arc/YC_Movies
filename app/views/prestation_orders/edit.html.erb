<h1>Editing Prestation Order</h1>

<div class="container">


  <%= form_for(@prestation_order, html: {class: "form-horizontal"}) do |f|  %>
    <% if @prestation_order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@prestation_order.errors.count, "error") %> prohibited this prestation_order from being saved:</h2>

        <ul>
        <% @prestation_order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-xs-60 col-sm-60 col-md-29">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2> Généralités </h2>
          </div>
          <div class="panel-body">

            <div class="form-group">
              <%= f.label :name , "Nom *", :class => "control-label col-xs-20"%>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <%= f.text_field :name, {:placeholder => "Nom", :class => "form-control"} %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :firstname, "Prénom *", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <%= f.text_field :firstname, {:placeholder => "Prénom", :class => "form-control"} %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :entreprise, "Nom entreprise", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-briefcase"></span></span>
                <%= f.text_field :entreprise, {:placeholder => "Nom de l'entreprise", :class => "form-control"} %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email, "E-mail *", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-send"></span></span>
                <%= f.email_field :email, { :placeholder => "email@example.com", :class => "form-control"} %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :tel, "N° de téléphone *", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-earphone"></span></span>
                <%= f.telephone_field :tel, {:placeholder => "0041...", :class => "form-control"} %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :availabilities, "Disponibilités pour un éventuel rendez-vous *", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                <%= f.text_area :availabilities, {:rows => "5", :placeholder => "vendredi 6 décembre, dès 18h ou mercredi 11 décembre le matin ...", :class => "form-control"} %>
              </div>
            </div>

          </div>
        </div>
      </div>

      <div class="col-xs-60 col-sm-60 col-md-29 col-md-offset-1">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2> Projet </h2>
          </div>
          <div class="panel-body">

            <div class="form-group">
              <%= f.label :typeofproduct, "Type de prestation ", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-tag"></span></span>
                <%= f.select :typeofproduct, PrestationOrder.typesofproduct, {}, {:disabled => true,  :class => "form-control" } %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :product, "Produit *", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-screenshot"></span></span>
                <%= f.text_area :product, {:required => true, :rows => "5", :placeholder => "Produit à promouvoir (établissement, fête, bar à cocktail, bonne cuisine, …)", :class => "form-control"} %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :length, "Durée de la vidéo [min]:[sec] *", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                <%= f.time_select :length, { :include_seconds => true, :discard_hour => true}, {:class => "form-control form-length"} %>

              </div>
            </div>

            <div class="form-group">
              <%= f.label :other, "Remarques", :class => "control-label col-xs-20" %>
              <div class="input-group col-xs-40">
                <span class="input-group-addon"><span class="glyphicon glyphicon-pencil"></span></span>
                <%= f.text_area :other, {:rows => "5", :placeholder => "Remarques éventuelles (facultatif) : un champ n'est pas clair, une idée, une proposition, etc...", :class => "form-control"} %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Continue" %>
    </div>
  <% end %>

</div>

<%= link_to 'Show', @prestation_order %> |
<%= link_to 'Back', prestation_orders_path %>
